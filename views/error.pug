extends layout

block header
  div(class='navbar flex-column mb-5')
    span(class='h1 mt-3') Members Only
    nav(class="navbar-expand-md")
      div(class="navbar-nav flex-row")
        a(class="nav-link mr-1" href="/") Home
        a(class="nav-link ml-1 mr-1" href="/sign-up") Sign Up
        if currentUser
          a(class="nav-link ml-1 mr-1" href="/log-in") Log Out
        else
          a(class="nav-link ml-1 mr-1" href="/log-in") Log In
        a(class="nav-link ml-1" href="/membership") Membership

block content
  div(class="d-flex flex-column align-items-center justify-content-center")
    h1= message
    h2= error.status
    pre #{error.stack}
